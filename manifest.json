{
    // Comments are accepted in the manifest, even though it is JSON.
    "manifest_version": 3,
    "name": "Juju Accounting Receipt Reader",
    "description": "A minimal example of a chrome extension using manifest v3",
    "version": "1.0",
    "icons": {
        "16": "logo/logo-16.png",
        "48": "logo/logo-48.png",
        "128": "logo/logo-128.png"
    },
    "action": {
        "default_title": "Juju Accounting Receipt Reader",
        "default_popup": "index.html"
    },
    "permissions": [],
    "host_permissions": [
        "*://*/*"
    ]
}
